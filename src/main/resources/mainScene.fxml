<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!--Допускается только один компонент на корневом уровне-->

<HBox fx:id="hBox" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.MainWindowController">
   <VBox spacing="10.0" HBox.hgrow="ALWAYS">
      <children>
          <Label fx:id="label">Hello World!</Label>
          <Button fx:id="loadImageButton" onAction="#loadImageButtonClicked" text="Open image" />
      </children>
      <HBox.margin>
         <Insets />
      </HBox.margin>
   </VBox>
    <ImageView fx:id="imageView" HBox.hgrow="ALWAYS" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</HBox>
